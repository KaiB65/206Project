#Graphing coriolis force vs jogging speed for the scene with rpm held constant at 12.42 (the value required for the movie scene)

import math as m
import numpy as np
import matplotlib.pyplot as plt

def F_cor(m,rpm,v):
    F_cor_array = []
    w = rpm*((2*np.pi)/60)
    for i in range(len(v)):
        F_cor_mag = 2*m*w*(v[i])
        F_cor_array.append(F_cor_mag)
    return F_cor_array

m = 80 #kg
rpm = 12.42
v = np.arange(0,9,0.01)

F_cor_vals = F_cor(m,rpm,v)

plt.plot(v,F_cor_vals,'r-')
plt.xlabel("Running Velocity (m/s)")
plt.ylabel("Coriolis Force Magnitude (Newtons)")
plt.title("Coriolis Force Magnitude (Newtons) vs Running Velocity (m/s) at rpm = 3")
plt.grid()
plt.vlines(x=3, ymin=0, ymax=1900)
